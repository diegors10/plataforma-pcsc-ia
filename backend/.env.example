# Database
DATABASE_URL="postgresql://username:password@localhost:5432/plataforma_colaborativa_ia?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth Google
# Substitua pelo seu CLIENT_ID do Console Cloud para validar tokens
GOOGLE_CLIENT_ID="sua-google-client-id.apps.googleusercontent.com"
